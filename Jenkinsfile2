pipeline {
    agent any
    tools {
        maven 'mvn' // Adjust to the correct name if different
        jdk 'JDK' // Adjust to the correct name if different
    }
    stages {
        stage('Build') {
            steps {
                script {
                    // Define the Maven home based on the configured Maven installation
                    def mvnHome = tool name: 'mvn', type: 'maven'
                    // Run the Maven package command
                    bat "${mvnHome}/bin/mvn package"
                }
            }
        }
    }
}
